<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<ResponsivePopover class="sapUiPopupWithPadding sapUiSizeCompact" placement="Top" contentWidth="15rem" contentHeight="18rem"
		afterClose="fnResPopClose">
		<customHeader>
			<Bar>
				<contentLeft>
					<Image src="" width="28px" height="28px"/>
					<Title text="Chat with your Bot"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://decline" press="fnChatBotClose" tooltip="Close"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<HBox></HBox>
			<VBox focusable="true" id="id_VBChatWindow">
				</VBox>
		</content>
		<beginButton>
			<HBox>
				<Input id="id_IPReply" width="80%" placeholder="Write Something...." press="fnChatBotWriteTextOnEnter" liveChange="fnLiveChngWriteReply"/>
				<Button id="id_BtnResPopBotOnEnter" icon="sap-icon://arrow-right" width="20%" enabled="false" press="fnChatBotWriteTextOnEnter"/>
				</HBox>
			</beginButton>
	</ResponsivePopover>
</core:FragmentDefinition>